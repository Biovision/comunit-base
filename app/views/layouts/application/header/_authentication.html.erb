<div class="authentication">
  <% if current_user.is_a? User %>
    <div class="plate">
      <%# addition = (Notification.owned_by(current_user).unread.count > 0) ? '' : ' read' %>
      <%#= link_to '&#x1f514;'.html_safe, my_notifications_path, class: "notifications #{addition}", title: t(:unread_notifications) %>
      <%= link_to(image_tag(current_user.image.tiny_2x.url), my_path) %>
      <%= link_to t(:logout), logout_path, method: :delete, title: t(:logout), class: 'button-action' %>
    </div>
  <% else %>
      <div>
        <%= link_to t('authentication.new.title'), login_path, class: 'button-nav' %>
        <%= link_to t('my.profiles.new.title'), new_my_profile_path, class: 'button-action' %>
      </div>
  <% end %>
</div>
