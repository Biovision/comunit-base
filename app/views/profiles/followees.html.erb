<% content_for :meta_title, t('.title', user: @entity.profile_name, page: current_page) %>

<article>
  <h1><%= t('.heading', user: @entity.profile_name) %></h1>

  <%= render partial: 'users/filter', locals: { filter: @filter } %>

  <%= paginate @collection %>
  <% if @collection.any? %>
      <ul class="list-of-entities">
        <% @collection.each do |entity| %>
            <li>
              <%= render partial: 'users/entity/in_list', locals: { user: entity.followee } %>
            </li>
        <% end %>
      </ul>
  <% else %>
      <%= render 'shared/nothing_found' %>
  <% end %>
  <%= paginate @collection %>
</article>