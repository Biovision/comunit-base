<% content_for :meta_title, t('.title', category: @entity.full_title, page: current_page) %>
<% content_for :hide_sidebar, '1' %>

<article class="entity-page">
  <h1><%= @entity.full_title %></h1>
  <ul class="actions">
    <li><%= back_icon admin_post_category_path(@entity), t('activerecord.models.post_category') %></li>
    <li><%= list_icon admin_post_categories_path %></li>
  </ul>

  <section>
    <h2><%= t('.heading') %></h2>

    <%= paginate @collection %>
    <%= render partial: 'admin/posts/list', locals: { collection: @collection } %>
    <%= paginate @collection %>
  </section>
</article>