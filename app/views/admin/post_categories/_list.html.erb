<% if collection.any? %>
    <ol class="list-of-entities">
      <% collection.each do |entity| %>
          <% if entity.deleted? %>
              <li class="deleted">
                <%= t(:deleted_entity) %>, id: <%= entity.id %> (<%= entity.name %>)
              </li>
          <% else %>
              <li data-number="<%= entity.priority %>" data-id="<%= entity.id %>">
                <%= render partial: 'admin/post_categories/post_category/in_list', locals: { category: entity } %>
              </li>
          <% end %>
      <% end %>
    </ol>
<% else %>
    <%= render 'shared/nothing_found' %>
<% end %>
