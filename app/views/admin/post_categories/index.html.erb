<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
    <span><%= t('admin.post_categories.nav_item.text') %></span>
<% end %>

<article>
  <h1><%= t('.heading') %></h1>

  <ul class="actions">
    <li><%= back_icon(admin_path) %></li>
  </ul>

  <%= render partial: 'list', locals: { collection: @collection } %>

  <section>
    <h2><%= t('post_categories.new.title') %></h2>

    <%= render partial: 'post_categories/form', locals: { entity: PostCategory.new } %>
  </section>
</article>
