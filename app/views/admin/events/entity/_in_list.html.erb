<div class="image">
  <%= event_image_preview(entity) %>
</div>
<div class="data">
  <div>
    <%= admin_event_link(entity) %>
  </div>
  <% unless entity.slug.blank? %>
      <div class="secondary info">
        <%= entity.slug %>
      </div>
  <% end %>
  <div class="info">
    <%= link_to(t(:event_participant_count, count: entity.event_participants_count), participants_admin_event_path(entity.id)) %>
  </div>
  <%= render partial: 'admin/events/toggleable', locals: { entity: entity } %>

  <ul class="actions">
    <li class="lockable <%= entity.locked? ? 'hidden' : '' %>">
      <%= edit_icon(edit_event_path(entity.id)) %>
    </li>
    <%= render partial: 'shared/actions/locks', locals: { entity: entity, path: lock_admin_event_path(entity.id) } %>
  </ul>
</div>
