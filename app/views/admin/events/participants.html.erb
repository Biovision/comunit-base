<% content_for :meta_title, t('.title', name: @entity.name, page: current_page) %>
<% content_for :breadcrumbs do %>
    <%= link_to t('admin.events.nav_item.text'), admin_events_path %>
    <%= admin_event_link(@entity) %>
    <span><%= t('.heading') %></span>
<% end %>

<article class="entity-page">
  <h1><%= @entity.name %></h1>

  <ul class="actions">
    <li><%= return_icon(admin_event_path(id: @entity.id)) %></li>
  </ul>

  <section>
    <h2><%= t(:event_participant_count, count: @entity.event_participants_count) %></h2>

    <%= render partial: 'shared/admin/list', locals: { collection: @collection } %>
  </section>
</article>