<% content_for :meta_title, t('.title', name: @entity.name) %>
<% content_for :hide_sidebar, '1' %>

<article class="entity-page">
  <h1><%= @entity.name %></h1>
  <ul class="actions">
    <li><%= back_icon(admin_events_path) %></li>
    <% unless @entity.locked? %>
        <li><%= edit_icon(edit_event_path(@entity.id)) %></li>
    <% end %>
  </ul>

  <nav>
    <ul>
      <li>
        <%= link_to(t(:event_participant_count, count: @entity.event_participants_count), participants_admin_event_path(@entity.id)) %>
      </li>
    </ul>
  </nav>

  <table>
    <tbody>
    <tr>
      <td colspan="2">
        <figure>
          <%= event_image_medium(@entity) %>
        </figure>
      </td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.event.slug') %></th>
      <td><%= @entity.slug %></td>
    </tr>
    <tr>
      <th><%= t('activerecord.attributes.event.lead') %></th>
      <td><%= simple_format(@entity.lead) %></td>
    </tr>
    <% unless @entity.start_date.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.event.start_date') %></th>
          <td><%= time_tag(@entity.start_date) %></td>
        </tr>
    <% end %>
    <tr>
      <th><%= t('activerecord.attributes.event.day_count') %></th>
      <td><%= @entity.day_count %></td>
    </tr>
    <% if @entity.price > 0 %>
        <tr>
          <th><%= t('activerecord.attributes.event.price') %></th>
          <td><%= @entity.price %></td>
        </tr>
    <% end %>
    <tr>
      <th><%= t('activerecord.attributes.event.address') %></th>
      <td><%= @entity.address %></td>
    </tr>
    <% unless @entity.coordinates.blank? %>
        <tr>
          <th><%= t('activerecord.attributes.event.coordinates') %></th>
          <td><%= @entity.coordinates %></td>
        </tr>
    <% end %>
    <tr>
      <td colspan="2">
        <%= raw(@entity.body) %>
      </td>
    </tr>
    </tbody>
    <tfoot>
    <tr>
      <td colspan="2">
        <%= render partial: 'admin/events/toggleable', locals: { entity: @entity } %>
      </td>
    </tr>
    </tfoot>
  </table>
</article>
