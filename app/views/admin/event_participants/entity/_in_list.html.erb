<div class="data">
  <div><%= entity.full_name %></div>
  <div class="secondary info">
    <%= admin_event_link(entity.event) %>
  </div>
  <% unless entity.notice.blank? %>
      <div class="info">
        <%= entity.notice %>
      </div>
  <% end %>
  <% unless entity.user.nil? %>
      <div class="info">
        <%= entity.user.profile_name %>
      </div>
  <% end %>
  <div class="secondary info">
    <div><%= entity.company %></div>
    <div><%= entity.phone %></div>
    <div><%= link_to(entity.email, "mailto:#{entity.email}") %></div>
  </div>
  <%= render partial: 'admin/event_participants/toggleable', locals: { entity: entity } %>
</div>
