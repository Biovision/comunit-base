<% content_for :meta_title, t('.title', album: @entity.name) %>
<% content_for :hide_sidebar, '1' %>

<article class="entity-page">
  <h1><%= @entity.name %></h1>
  <ul class="actions">
    <li><%= return_icon(admin_album_path(id: @entity.id)) %></li>
  </ul>

  <section>
    <h2><%= t(:photo_count, count: @entity.photos_count) %></h2>

    <%= paginate @collection %>
    <%= render partial: 'admin/photos/list', locals: { collection: @collection } %>
    <%= paginate @collection %>
  </section>

  <section>
    <h2><%= t('photos.new.title') %></h2>

    <%= render partial: 'photos/form', locals: { entity: @entity.photos.new } %>
  </section>
</article>
