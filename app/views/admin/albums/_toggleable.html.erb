<div class="toggleable" data-url="<%= toggle_admin_album_path(id: entity.id) %>">
  <% Album.toggleable_attributes.each do |flag| %>
  <span class="<%= entity.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.album.#{flag}") %>
  </span>
  <% end %>
</div>
