<div class="data">
  <div><%= link_to theme.name, admin_theme_path(theme) %></div>
  <div class="info">
    <%= theme.slug %>
  </div>
  <div class="secondary info">
    <%= t(:post_category_count, count: theme.post_categories_count) %>,
    <%= t(:news_category_count, count: theme.news_categories_count) %>
  </div>

  <ul class="actions">
    <li class="lockable <%= theme.locked? ? 'hidden' : '' %>">
      <%= edit_icon edit_theme_path(theme) %>
    </li>
    <%= render partial: 'shared/actions/locks', locals: { entity: theme, path: lock_api_theme_path(theme) } %>
  </ul>
</div>
