<figure class="image">
  <%= site_image(entity) %>
</figure>
<div class="data">
  <div><%= admin_site_link(entity) %></div>
  <div class="info">
    <%= entity.host %>
  </div>
  <div class="secondary info">
    <%= t('activerecord.attributes.site.version') %>:
    <%= entity.version %>
  </div>
  <div class="secondary info">
    <%= entity.uuid %>
  </div>
  <% unless entity.description.blank? %>
    <div class="secondary info">
      <%= entity.description %>
    </div>
  <% end %>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals: {
            entity: entity,
            url: toggle_admin_site_path(id: entity.id)
        }
    )
  %>

  <ul class="actions">
    <li><%= edit_icon(edit_site_path(id: entity.id)) %></li>
    <% if entity.active? %>
      <li>
        <%=
          world_icon(
              entity.host,
              entity.host,
              target: '_blank',
              rel: 'external noopener noreferrer'
          )
        %>
      </li>
    <% end %>
  </ul>
</div>
