<% if collection.any? %>
  <ul class="regions-user-linked">
    <% collection.each do |link| %>
    <li>
      <%=
        button_tag(
            '',
            class: 'region-link-destroy',
            data: {
                message: t(:are_you_sure),
                url: user_admin_region_path(
                    id: link.region_id,
                    user_id: handler.user.id
                )
            },
            type: :button
        )
      %>
      <%= link.region.long_name %>
    </li>
    <% end %>
  </ul>
<% end %>
