<div class="toggleable" data-url="<%= toggle_api_news_category_path(id: news_category.id) %>">
  <% NewsCategory.toggleable_attributes.each do |flag| %>
  <span class="<%= news_category.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.news_category.#{flag}") %>
  </span>
  <% end %>
</div>
