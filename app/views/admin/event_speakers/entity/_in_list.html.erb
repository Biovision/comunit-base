<div class="image">
  <%= event_speaker_image_preview(entity) %>
</div>
<div class="data">
  <div><%= entity.name %></div>
  <div class="secondary info">
    <%= entity.occupation %>
  </div>
  <%= render partial: 'admin/event_speakers/toggleable', locals: { entity: entity } %>

  <% unless entity.locked? %>
      <ul class="actions">
        <li><%= edit_icon(edit_event_speaker_path(entity.id)) %></li>
        <%= render partial: 'shared/actions/priority_changer', locals: { path: priority_admin_event_speaker_path(entity.id) } %>
      </ul>
  <% end %>
</div>
