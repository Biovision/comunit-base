<% if collection.any? %>
    <ul class="list-of-entities">
      <% collection.each do |entity| %>
          <% if entity.deleted? %>
              <li class="deleted">
                <%= t(:deleted_entity) %>, id: <%= entity.id %>
                (<%= entity.title %>)
              </li>
          <% else %>
              <li data-id="<%= entity.id %>">
                <%= render partial: 'admin/news/news/in_list', locals: { news: entity } %>
              </li>
          <% end %>
      <% end %>
    </ul>
<% else %>
    <%= render 'shared/nothing_found' %>
<% end %>
