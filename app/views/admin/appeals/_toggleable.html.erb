<div class="toggleable" data-url="<%= toggle_admin_appeal_path(entity) %>">
  <% Appeal.toggleable_attributes.each do |flag| %>
  <span class="<%= entity.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.appeal.#{flag}") %>
  </span>
  <% end %>
</div>
