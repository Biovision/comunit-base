<div class="data">
  <div><%= admin_deed_category_link(entity) %></div>
  <div class="info">
    <%= t(:subcategory_count, count: entity.children_cache.count) %>
  </div>
  <div class="secondary info">
    <%= t(:deed_count, count: entity.deeds_count) %>
  </div>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals:  {
            entity: entity,
            url:    toggle_admin_deed_category_path(id: entity.id)
        }
    )
  %>

  <ul class="actions">
    <li><%= edit_icon(edit_deed_category_path(id: entity.id)) %></li>
    <%=
      render(
          partial: 'shared/actions/priority_changer',
          locals:  {
              path: priority_admin_deed_category_path(id: entity.id)
          }
      )
    %>
  </ul>
</div>
