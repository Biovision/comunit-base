<div class="image">
  <%= simple_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_decision_link(entity) %></div>
  <div class="info">
    <%= entity.end_date %>
  </div>
  <div class="secondaty info">
    <%= t('activerecord.attributes.decision.answers') %>:
    <%= entity.answers.values.join(' / ') %>
  </div>
  <div class="secondary info">
    <%= entity.uuid %>
  </div>

  <%= render(partial: 'shared/admin/toggle', locals: { entity: entity }) %>

  <ul class="actions">
    <li><%= edit_icon(entity) %></li>
    <% if entity.visible? %>
      <li><%= world_icon(decision_path(id: entity.uuid)) %></li>
    <% end %>
  </ul>
</div>
