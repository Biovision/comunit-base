<% content_for :meta_title, t('.title') %>
<% content_for :hide_sidebar, '1' %>

<article>
  <h1><%= t('.title') %></h1>

  <div class="dashboard">
    <nav>
      <ul>
        <% if current_user_has_privilege?(:metrics_manager) %>
            <li><%= render 'admin/metrics/nav_item' %></li>
        <% end %>
        <% if current_user_has_privilege?(:administrator) %>
            <li><%= render 'admin/regions/nav_item' %></li>
            <li><%= render 'admin/themes/nav_item' %></li>
            <li><%= render 'admin/users/nav_item' %></li>
            <li><%= render 'admin/login_attempts/nav_item' %></li>
            <li><%= render 'admin/tokens/nav_item' %></li>
            <li><%= render 'admin/privileges/nav_item' %></li>
            <li><%= render 'admin/privilege_groups/nav_item' %></li>
            <li><%= render 'admin/post_categories/nav_item' %></li>
            <li><%= render 'admin/news_categories/nav_item' %></li>
            <li><%= render 'admin/entries/nav_item' %></li>
        <% end %>
        <% if current_user_has_privilege?(:albums_manager) %>
            <li><%= render 'admin/albums/nav_item' %></li>
        <% end %>
        <% if current_user_has_privilege?(:group_manager) %>
            <li><%= render 'admin/groups/nav_item' %></li>
        <% end %>
        <% if current_user_has_privilege?(:teams_manager) %>
            <li><%= render 'admin/teams/nav_item' %></li>
        <% end %>
        <% if current_user_in_group?(:poll_managers) %>
            <li><%= render 'admin/polls/nav_item' %></li>
        <% end %>
        <%= render 'admin/index/additional' %>
      </ul>
    </nav>

    <%= render 'admin/index/index/feedback_manager' %>

    <%= render 'editorial/index/navigation' %>
  </div>
</article>
