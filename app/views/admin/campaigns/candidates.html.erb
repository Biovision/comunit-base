<% content_for :meta_title, t('.title', campaign: @entity.name) %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('admin.campaigns.index.nav_text'), admin_campaigns_path) %>
  <%= admin_campaign_link(@entity) %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <h1><%= t(:candidate_count, count: @entity.candidates_count) %></h1>

  <ul class="actions">
    <li><%= return_icon(admin_campaign_path(id: @entity.id)) %></li>
    <li><%= create_icon(new_candidate_admin_campaign_path(id: @entity.id)) %></li>
  </ul>

  <%=
    render(
        partial: 'shared/admin/list',
        locals: {
            collection: @collection
        }
    )
  %>
</article>
