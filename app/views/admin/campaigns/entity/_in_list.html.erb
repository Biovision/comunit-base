<figure class="image">
  <%= simple_image_preview(entity) %>
</figure>
<div class="data">
  <div><%= admin_campaign_link(entity) %></div>
  <div class="info">
    <%= entity.slug %>
    <%= entity.date %>
  </div>
  <div class="secondary info">
    <%=
      link_to(
          t(:candidate_count, count: entity.candidates_count),
          candidates_admin_campaign_path(id: entity.id)
      )
    %>
  </div>
  <div class="secondary info">
    <%= entity.uuid %>
  </div>

  <%= render(partial: 'shared/admin/toggle', locals: { entity: entity }) %>

  <ul class="actions">
    <li><%= edit_icon(entity) %></li>
    <% if entity.active? %>
      <li><%= world_icon(campaign_path(id: entity.slug)) %></li>
    <% end %>
  </ul>
</div>
