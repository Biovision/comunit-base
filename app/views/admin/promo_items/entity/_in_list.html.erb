<div class="image">
  <%= promo_image_preview(entity) %>
</div>
<div class="data">
  <div><%= admin_promo_item_link(entity) %></div>
  <% unless entity.lead.blank? %>
    <div class="info">
      <%= entity.lead %>
    </div>
  <% end %>
  <% unless entity.url.blank? %>
    <div class="secondary info">
      <%= t('activerecord.attributes.promo_item.url') %>:
      <%= entity.url %>
    </div>
  <% end %>

  <%=
    render(
        partial: 'shared/admin/toggleable',
        locals:  {
            entity: entity,
            url:    toggle_admin_promo_item_path(id: entity.id)
        }
    )
  %>

  <ul class="actions">
    <li><%= edit_icon(edit_promo_item_path(id: entity.id)) %></li>
  </ul>
</div>
