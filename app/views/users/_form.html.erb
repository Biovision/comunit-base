<%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <table>
      <tbody>
      <tr>
        <th colspan="2"><%= t('my.profiles.edit.form.common_parameters') %></th>
      </tr>
      <tr>
        <td colspan="2">
          <figure class="preview" id="user-image">
            <%= image_tag entity.image.profile.url, alt: t(:current_image) %>
            <figcaption>
              <%= f.label :image %>
              <%= f.file_field :image, accept: 'image/jpeg,image/png', data: { image: 'user-image' } %>
            </figcaption>
          </figure>
        </td>
      </tr>
      <tr>
        <th><%= f.label :notice %></th>
        <td><%= f.text_field :notice %></td>
      </tr>
      <tr>
        <th><%= f.label :slug %></th>
        <td><%= f.text_field :slug, required: true, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :screen_name %></th>
        <td><%= f.text_field :screen_name, size: 30 %></td>
      </tr>
      <% if entity.id.blank? %>
          <tr>
            <th><%= f.label :password %></th>
            <td><%= f.text_field :password %></td>
          </tr>
          <tr>
            <th><%= f.label :password_confirmation %></th>
            <td><%= f.text_field :password_confirmation %></td>
          </tr>
      <% end %>
      <tr>
        <th><%= f.label :surname %></th>
        <td><%= f.text_field :surname, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :name %></th>
        <td><%= f.text_field :name, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :patronymic %></th>
        <td><%= f.text_field :patronymic, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :gender %></th>
        <td><%= f.select :gender, genders_for_select %></td>
      </tr>
      <tr>
        <th><%= f.label :marital_status %></th>
        <td><%= f.select :marital_status, marital_statuses_for_select(entity.gender) %></td>
      </tr>
      <tr>
        <th><%= f.label :birthday %></th>
        <td><%= f.date_field :birthday, size: 10, placeholder: 'ДД.ММ.ГГГГ' %></td>
      </tr>
      <tr>
        <th><%= f.label :home_city_name %></th>
        <td><%= f.text_field :home_city_name, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :language_names %></th>
        <td><%= f.text_field :language_names, size: 50 %></td>
      </tr>

      <tr>
        <th colspan="2"><%= t('my.profiles.edit.form.contact') %></th>
      </tr>
      <tr>
        <th><%= f.label :country_name %></th>
        <td><%= f.text_field :country_name, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :city_name %></th>
        <td><%= f.text_field :city_name, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :region_id %></th>
        <td><%= f.select :region_id, regions_for_select %></td>
      </tr>
      <tr>
        <th><%= f.label :home_address %></th>
        <td><%= f.text_field :home_address, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :email %></th>
        <td><%= f.email_field :email, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :phone %></th>
        <td><%= f.phone_field :phone, size: 15 %></td>
      </tr>
      <tr>
        <th><%= f.label :secondary_phone %></th>
        <td><%= f.telephone_field :secondary_phone, size: 20 %></td>
      </tr>
      <tr>
        <th><%= f.label :skype_uid %></th>
        <td><%= f.text_field :skype_uid, size: 30 %></td>
      </tr>

      <tr>
        <th colspan="2"><%= t('my.profiles.edit.form.about') %></th>
      </tr>
      <tr>
        <th><%= f.label :activities %></th>
        <td><%= f.text_area :activities, cols: 50, rows: 10 %></td>
      </tr>
      <tr>
        <th><%= f.label :nationality_name %></th>
        <td><%= f.text_field :nationality_name, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :interests %></th>
        <td><%= f.text_area :interests, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :favorite_music %></th>
        <td><%= f.text_area :favorite_music, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :favorite_movies %></th>
        <td><%= f.text_area :favorite_movies, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :favorite_shows %></th>
        <td><%= f.text_area :favorite_shows, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :favorite_books %></th>
        <td><%= f.text_area :favorite_books, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :favorite_games %></th>
        <td><%= f.text_area :favorite_games, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :favorite_quotes %></th>
        <td><%= f.text_area :favorite_quotes, cols: 50, rows: 5 %></td>
      </tr>

      <tr>
        <th colspan="2"><%= t('my.profiles.edit.form.stand_in_life') %></th>
      </tr>
      <tr>
        <th><%= f.label :political_views %></th>
        <td><%= f.text_field :political_views, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :religion_name %></th>
        <td><%= f.text_field :religion_name, size: 30 %></td>
      </tr>
      <tr>
        <th><%= f.label :main_in_life %></th>
        <td><%= f.text_area :main_in_life, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :main_in_people %></th>
        <td><%= f.text_area :main_in_people, cols: 50, rows: 5 %></td>
      </tr>
      <tr>
        <th><%= f.label :smoking_attitude %></th>
        <td><%= f.select :smoking_attitude, attitudes_for_select %></td>
      </tr>
      <tr>
        <th><%= f.label :alcohol_attitude %></th>
        <td><%= f.select :alcohol_attitude, attitudes_for_select %></td>
      </tr>
      <tr>
        <th><%= f.label :inspiration %></th>
        <td><%= f.text_area :inspiration, cols: 50, rows: 5 %></td>
      </tr>

      <tr>
        <td colspan="2" class="flags">
          <ul>
            <!--<li><%= f.check_box :bot %><%= f.label :bot %></li>-->
            <li><%= f.check_box :allow_login %><%= f.label :allow_login %></li>
            <li><%= f.check_box :email_confirmed %><%= f.label :email_confirmed %></li>
            <li><%= f.check_box :phone_confirmed %><%= f.label :phone_confirmed %></li>
            <li><%= f.check_box :allow_mail %><%= f.label :allow_mail %></li>
            <li><%= f.check_box :verified %><%= f.label :verified %></li>
            <li><%= f.check_box :show_email %><%= f.label :show_email %></li>
            <li><%= f.check_box :show_phone %><%= f.label :show_phone %></li>
            <li><%= f.check_box :show_secondary_phone %><%= f.label :show_secondary_phone %></li>
            <li><%= f.check_box :show_birthday %><%= f.label :show_birthday %></li>
            <li><%= f.check_box :show_patronymic %><%= f.label :show_patronymic %></li>
            <li><%= f.check_box :show_skype_uid %><%= f.label :show_skype_uid %></li>
            <li><%= f.check_box :show_home_address %><%= f.label :show_home_address %></li>
            <li><%= f.check_box :show_about %><%= f.label :show_about %></li>
          </ul>
        </td>
      </tr>
      <tr>
        <td colspan="2" class="flags">
          <fieldset>
            <legend><%= t('.roles') %></legend>
            <ul>
              <% UserRole.roles.keys.each do |role| %>
                  <li>
                    <%= check_box_tag "roles[#{role}]", 1, @entity.has_role?(role) %>
                    <%= label_tag "roles_#{role}", t("activerecord.attributes.user_role.roles.#{role}") %>
                  </li>
              <% end %>
            </ul>
          </fieldset>
        </td>
      </tr>
      </tbody>
      <tfoot>
      <tr>
        <td colspan="2">
          <%= f.button t(:save), type: :submit %>
        </td>
      </tr>
      </tfoot>
    </table>
<% end %>
