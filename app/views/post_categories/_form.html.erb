<%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <table>
      <tbody>
      <% unless entity.id.nil? %>
          <% unless entity.parent_id.nil? %>
              <tr>
                <th><%= t('activerecord.attributes.post_category.parent_id') %></th>
                <td><%= link_to entity.parent.name, admin_post_category_path(entity.parent) %></td>
              </tr>
          <% end %>
      <% end %>
      <tr>
        <th><%= f.label :name %></th>
        <td><%= f.text_field :name, size: 25, required: true %></td>
      </tr>
      <% unless entity.id.nil? %>
          <tr>
            <th><%= f.label :slug %></th>
            <td><%= f.text_field :slug, size: 25, required: true %></td>
          </tr>
      <% end %>
      <tr>
        <th><%= f.label :priority %></th>
        <td><%= f.number_field :priority, in: (1..10000), required: true %></td>
      </tr>
      <tr>
        <td colspan="2" class="flags">
          <ul>
            <li>
              <%= f.check_box :visible %>
              <%= f.label :visible %>
            </li>
          </ul>
        </td>
      </tr>
      </tbody>
      <tfoot>
      <tr>
        <td colspan="2">
          <% if entity.id.nil? %>
              <%= f.hidden_field :parent_id %>
          <% end %>
          <%= f.button t(:save), type: :submit %>
        </td>
      </tr>
      </tfoot>
    </table>
<% end %>
