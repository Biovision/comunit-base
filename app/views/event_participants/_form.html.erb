<%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <dl>
      <dt><%= f.label :name %></dt>
      <dd><%= f.text_field :name, required: true %></dd>

      <dt><%= f.label :surname %></dt>
      <dd><%= f.text_field :surname, required: true %></dd>

      <dt><%= f.label :company %></dt>
      <dd><%= f.text_field :company, required: true %></dd>

      <dt><%= f.label :email %></dt>
      <dd><%= f.email_field :email, required: true %></dd>

      <dt><%= f.label :phone %></dt>
      <dd><%= f.telephone_field :phone, required: true %></dd>

      <dt><%= f.label :comment %></dt>
      <dd><%= f.text_area :comment, cols: 50, rows: 5 %></dd>
    </dl>

    <div class="buttons">
      <%= f.hidden_field :event_id if entity.id.nil? %>
      <%= f.button 'Зарегистрироваться', type: :submit %>
    </div>
<% end %>
