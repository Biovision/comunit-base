<% content_for :meta_title, t('.title') %>

<article id="my-index" class="profile-content">
  <div>
    <h1><%= t('my.index.index.heading') %></h1>

    <figure role="group">
      <%= user_image_profile(current_user) %>
      <figcaption><%= current_user.profile_name %></figcaption>
    </figure>

    <nav class="dashboard">
      <ul>
        <li><%= render 'my/profiles/nav_item' %></li>
        <li><%= render 'my/tokens/nav_item' %></li>
        <li><%= render 'my/login_attempts/nav_item' %></li>
        <% handler = Biovision::Components::BaseComponent.handler('posts', current_user) %>
        <% if handler.allow_post_type?('article') %>
          <li><%= link_to('Добавить статью', my_new_article_path) %></li>
        <% end %>
        <% if handler.allow_post_type?('news') %>
          <li><%= link_to('Добавить новость', my_new_news_path) %></li>
        <% end %>
        <% if handler.allow_post_type?('blog_post') %>
          <li><%= link_to('Добавить запись в блог', my_new_blog_post_path) %></li>
        <% end %>
        <%= render 'my/index/index/custom_sidebar' %>
        <% if UserPrivilege.user_has_any_privilege?(current_user) %>
          <li><%= link_to t('admin.index.index.heading'), admin_path %></li>
        <% end %>
        <li><%= link_to t(:logout), logout_path, method: :delete %></li>
      </ul>

    </nav>
  </div>
</article>
