<% content_for :meta_title, t('.title', name: @entity.name) %>

<article class="album">
  <h1><%= @entity.name %></h1>

  <figure>
    <%= album_image_medium(@entity) %>
  </figure>

  <div class="description">
    <%= simple_format(@entity.description) %>
  </div>

  <section>
    <h2><%= t(:photo_count, count: @entity.photos_count) %></h2>

    <%= paginate @collection %>
    <%= render partial: 'photos/list', locals: { collection: @collection } %>
    <%= paginate @collection %>
  </section>
</article>
