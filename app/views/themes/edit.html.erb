<% content_for :meta_title, t('.title') %>

<article class="entity-page">
  <h1><%= t('.title') %></h1>

  <ul class="actions">
    <li><%= list_icon admin_themes_path %></li>
    <li><%= create_icon new_theme_path %></li>
    <li><%= detail_icon admin_theme_path(@entity.id) %></li>
    <li class="danger"><%= destroy_icon @entity %></li>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
