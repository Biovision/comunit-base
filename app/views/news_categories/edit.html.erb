<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
    <%= link_to(t('admin.news_categories.nav_item.text'), admin_news_categories_path) %>
    <%= admin_news_category_link(@entity) %>
    <span><%= t('.heading') %></span>
<% end %>

<article>
  <h1><%= t('.heading') %></h1>
  <ul class="actions">
    <li><%= return_icon(admin_news_category_path(@entity.id)) %></li>
    <li class="danger"><%= destroy_icon(@entity) %></li>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
