<div class="toggleable" data-url="<%= toggle_editorial_user_path(entity.id) %>">
  <% %i(verified allow_login).each do |flag| %>
  <span class="<%= entity.attributes[flag.to_s] ? 'active' : 'inactive' %>" data-flag="<%= flag %>">
    <%= t("activerecord.attributes.user.#{flag}") %>
  </span>
  <% end %>
</div>
