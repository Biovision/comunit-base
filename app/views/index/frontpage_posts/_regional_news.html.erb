<div class="frontpage-posts">
  <div class="heading">
    Новости регионов
  </div>
  <div class="posts">
    <% if posts.any? %>
        <% posts.each do |post| %>
            <% next if post.category.blank? %>
            <%= render partial: 'index/frontpage_posts/preview', locals: { post: post } %>
        <% end %>
    <% end %>
    <div class="load-more" data-url="<%= index_regional_news_path(page: 2, region_slug: current_region.long_slug, region_id: param_from_request(:redion_id)) %>">
      <%= button_tag 'Загрузить ещё', type: :button %>
    </div>
  </div>
</div>
