<% if collection.any? %>
    <ul class="posts-as-illustrations">
      <% collection.each do |entity| %>
        <li>
          <div class="image"><%= post_image_medium(entity) %></div>
          <div class="text">
            <div class="title"><%= link_to_commentable(entity, current_user) %></div>
            <div class="lead"><%= glimpse(entity.lead) %></div>
            <div class="time"><%= time_tag entity.created_at %></div>
          </div>
        </li>
      <% end %>
    </ul>
<% end %>