<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('admin.campaigns.nav_item.text'), admin_campaigns_path) %>
  <%= admin_campaign_link(@entity.campaign) %>
  <%= link_to(t('admin.campaigns.candidates.nav_text'), candidates_admin_campaign_path(id: @entity.campaign_id)) %>
  <%= admin_candidate_link(@entity) %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <h1><%= t('.heading') %></h1>

  <ul class="actions">
    <li><%= return_icon(admin_candidate_path(id: @entity.id)) %></li>
    <li class="danger"><%= destroy_icon(@entity) %></li>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
