<% content_for :meta_title, t('.title') %>
<% content_for :hide_sidebar, '1' %>

<article class="entity-page">
  <h1><%= t('.title') %></h1>
  <ul class="actions">
    <li><%= back_icon admin_posts_path %></li>
    <li><%= detail_icon admin_post_path(@entity) %></li>
    <li class="danger"><%= destroy_icon @entity %></li>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
