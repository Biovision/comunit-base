<div class="post-preview">
  <div class="heading"><%= link_to post.title, post %></div>
  <div class="body">
    <% unless post.image.blank? %>
      <div class="image"><%= image_tag post.image.small.url %></div>
      <div class="lead"><%= post.lead %></div>
    <% end %>
  </div>
  <div class="footer">
    <%= render partial: 'posts/entity/preview_author', locals: { entity: post } %>
    <% if post.tags_cache.any? %>
      <div class="tags">
        <%= t('posts.form.tags') %>: <%= post.tags_string %>
      </div>
    <% end %>
  </div>
</div>
